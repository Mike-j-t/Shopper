<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/standard_dummy_size"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:baselineAligned="false">
    <LinearLayout
        android:id="@+id/shoppinglistactions_originaldata_heading_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/standard_heading_height"
        android:background="@color/colorlistviewheading">
        <TextView
            android:id="@+id/shoppinglistactions_originaldata_heading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Original Shopping-List Values"
            android:textSize="@dimen/standard_heading_text_size"
            android:textStyle="bold"
            android:textColor="@color/colorNormalButtonText"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/shoppinglistactions_originaldata_labels"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/standard_heading_height"
        android:background="@color/colorlistviewheading"
        android:layout_marginBottom="@dimen/activity_vertical_margin">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:text="Product"
            android:textSize="@dimen/standard_heading_text_size"
            android:textStyle="bold"
            android:textColor="@color/colorNormalButtonText"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:text="Qty"
            android:textSize="@dimen/standard_heading_text_size"
            android:textColor="@color/colorNormalButtonText"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:text="Cost"
            android:textSize="@dimen/standard_heading_text_size"
            android:textColor="@color/colorNormalButtonText"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:text="Total"
            android:textSize="@dimen/standard_heading_text_size"
            android:textColor="@color/colorNormalButtonText"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/shoppinglistactions_originaldata"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin">
        <TextView
            android:id="@+id/shoppinglistactions_originaldata_product"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:text="Product"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/shoppinglistactions_originaldata_quantity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:text="Qty"/>
        <TextView
            android:id="@+id/shoppinglistactions_originaldata_cost"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:text="Cost"/>
        <TextView
            android:id="@+id/shoppinglistactions_originaldata_total"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:text="Total"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/shoppinglistactions_help_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin">
    </LinearLayout>
    <LinearLayout
        android:id="@+id/shoppinglistactions_heading_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/standard_heading_height"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:background="@color/colorlistviewheading">
        <TextView
            android:id="@+id/shoppinglistactions_heading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Actions"
            android:textSize="@dimen/standard_heading_text_size"
            android:textStyle="bold"
            android:textColor="@color/colorNormalButtonText"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/shoppinglistactions_increasequantity_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin">
        <Button
            android:id="@+id/shoppinglistactions_quantityplus_button"
            android:text="+1"
            style="@style/textviewbutton"
            />
        <Button
            android:id="@+id/shoppinglistactions_quantityminus_button"
            android:text="-1"
            style="@style/textviewbutton"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"/>
        <TextView
            android:layout_width="0dp"
            android:paddingTop="5dp"
            android:layout_height="match_parent"
            android:layout_weight="30"
            android:text="New Quantity"
            android:textColor="@color/colorNormalButtonText"
            android:background="@color/colorlistviewheading"/>
        <EditText
            android:id="@+id/shoppinglistaction_newquantity"
            android:layout_width="0dp"
            android:layout_weight="20"
            android:digits="0123456789"
            style="@style/edittext_optional_style" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="45"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/shoppinglistactions_changecost_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin">
        <Button
            android:id="@+id/shoppinglistactions_donothing1_button"
            style="@style/textviewbutton"
            android:visibility="invisible"
            />
        <Button
            android:id="@+id/shoppinglistactions_donothing2_button"
            style="@style/textviewbutton"
            android:visibility="invisible"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30"
            android:text="New Cost"
            android:textColor="@color/colorNormalButtonText"
            android:background="@color/colorlistviewheading"/>
        <EditText
            android:id="@+id/shoppinglistaction_newcost"
            android:layout_width="0dp"
            android:layout_weight="20"
            android:digits="0123456789."
            style="@style/edittext_optional_style" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="45"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/shoppinglistactions_changename_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin">
        <Button
            android:id="@+id/shoppinglistactions_donothing3_button"
            style="@style/textviewbutton"
            android:visibility="invisible"
            />
        <Button
            android:id="@+id/shoppinglistactions_donothing4_button"
            style="@style/textviewbutton"
            android:visibility="invisible"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30"
            android:text="New Product Name"
            android:textColor="@color/colorNormalButtonText"
            android:background="@color/colorlistviewheading"/>
        <EditText
            android:id="@+id/shoppinglistaction_newname"
            android:layout_width="0dp"
            android:layout_weight="65"
            style="@style/edittext_optional_style" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/shoppinglistactions_finish_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/shoppinglistactions_save_button"
            android:text="@string/standardsavebutton"
            style="@style/textviewbutton"
            />
        <Button
            android:id="@+id/shoppinglistactions_restore_button"
            android:text="Restore"
            style="@style/textviewbutton"
            />
        <Button
            android:id="@+id/shoppinglistactions_finish_button"
            android:text="@string/standarddonebutton"
            style="@style/textviewbutton"
            />
    </LinearLayout>
</LinearLayout>