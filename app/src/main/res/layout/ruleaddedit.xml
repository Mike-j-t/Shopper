<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rae_layout"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/standard_dummy_size"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:descendantFocusability="afterDescendants"
    android:baselineAligned="false">
    <LinearLayout
        android:id="@+id/ruleaddedit_top_buttons"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/standard_button_height"
        android:layout_margin="@dimen/standard_dummy_size">
        <TextView
            android:id="@+id/ruleaddedit_done_button"
            style="@style/textviewbutton"
            android:text="@string/standarddonebutton"
            android:onClick="ruleaddedit_done"/>
        <TextView
            android:id="@+id/ruleaddedit_save_button"
            style="@style/textviewbutton"
            android:text="@string/standardsavebutton"
            android:onClick="ruleaddedit_save"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ruleaddedit_help_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/aislelist_help"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rules_ruleaddedit_instructions"
            android:textSize="@dimen/standard_listview_text_size"
            android:background="@color/colorHelpButton"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ruleaddedit_productheader"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/standard_heading_height"
        android:baselineAligned="false">
        <TextView
            android:id="@+id/ruleaddedit_productlabel"
            android:layout_width="@dimen/standard_dummy_size"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:singleLine="true"
            android:text="@string/productlabel"
            android:textSize="@dimen/standard_subsubsubheading_text_size"/>
        <TextView
            android:id="@+id/ruleaddedit_product"
            android:layout_width="@dimen/standard_dummy_size"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:maxLines="1"
            android:textSize="@dimen/standard_subsubsubheading_text_size"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ruleaddedit_storeheader"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/standard_heading_height"
        android:baselineAligned="false">
        <TextView
            android:id="@+id/ruleaddedit_storelabel"
            android:layout_width="@dimen/standard_dummy_size"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:singleLine="true"
            android:text="@string/shoplabel"
            android:textSize="@dimen/standard_subsubsubheading_text_size"/>
        <TextView
            android:id="@+id/ruleaddedit_store"
            android:layout_width="@dimen/standard_dummy_size"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:maxLines="1"
            android:textSize="@dimen/standard_subsubsubheading_text_size"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ruleaddedit_aisleheader"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/standard_heading_height"
        android:baselineAligned="false">
        <TextView
            android:id="@+id/ruleaddedit_aislelabel"
            android:layout_width="@dimen/standard_dummy_size"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:singleLine="true"
            android:text="@string/aislelabel"
            android:textSize="@dimen/standard_subsubsubheading_text_size"/>
        <TextView
            android:id="@+id/ruleaddedit_ailse"
            android:layout_width="@dimen/standard_dummy_size"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:maxLines="1"
            android:textSize="@dimen/standard_subsubsubheading_text_size"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ruleaddedit_inputrulename"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/standard_dummy_size">
            <TextView
                android:id="@+id/ruleaddedit_rulenamelabel"
                android:layout_width="@dimen/standard_dummy_size"
                android:layout_height="@dimen/standard_subsubsubheading_height"
                android:layout_weight="0.15"
                android:singleLine="true"
                android:layout_margin="@dimen/standard_dummy_size"
                android:text="@string/rulename_label"
                android:textStyle="bold"
                android:textSize="@dimen/standard_subsubsubheading_text_size"/>
            <EditText
                style="@style/edittext_style"
                android:id="@+id/ruleaddedit_rulename"
                android:layout_weight="0.75"
                android:maxLength="@integer/rulename_maxcharacters"
                tools:ignore="LabelFor" />
        <TextView
            android:layout_width="@dimen/standard_dummy_size"
            android:layout_height="@dimen/standard_subsubsubheading_height"
            android:layout_weight="0.2"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ruleaddedit_inputautoadd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/standard_button_height">
        <TextView
            android:id="@+id/ruleaddedit_autoadd_label"
            android:layout_width="@dimen/standard_dummy_size"
            android:layout_height="wrap_content"
            android:layout_weight="0.95"
            android:padding="@dimen/standard_dummy_size"
            android:text="@string/rule_addeditpromptextra"
            android:textSize="@dimen/standard_subsubsubheading_text_size"
            android:textStyle="bold"/>
        <Switch
            android:id="@+id/ruleaddedit_autoadd"
            android:layout_width="@dimen/standard_dummy_size"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_gravity="top"
            android:text=""
            android:textSize="@dimen/standard_subsubsubheading_text_size"
            android:hint="">

        </Switch>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ruleaddedit_inputstartdate"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/standard_button_height"
        android:baselineAligned="false">
        <TextView
            android:id="@+id/ruleaddedit_startdate_label"
            android:layout_width="@dimen/standard_dummy_size"
            android:layout_height="@dimen/standard_subsubsubheading_height"
            android:layout_weight="0.16"
            android:gravity="top"
            android:text="@string/rule_addedit_acton_label"
            android:textSize="@dimen/standard_subsubsubheading_text_size"
            android:textStyle="bold">
        </TextView>
        <EditText
            style="@style/edittext_required_style"
            android:id="@+id/ruleaddedit_startdate"
            android:layout_weight="0.23"
            android:inputType="date"
            android:digits="0123456789/"
            android:maxLength="10"
            tools:ignore="LabelFor">
        </EditText>
        <TextView
            android:layout_width="@dimen/standard_dummy_size"
            android:layout_height="@dimen/standard_subsubsubheading_height"
            android:layout_weight="0.03"/>
        <TextView
            android:layout_width="@dimen/standard_dummy_size"
            android:layout_height="@dimen/standard_subsubsubheading_height"
            android:layout_weight="0.15"
            android:gravity="top"
            android:text="@string/rule_addedit_frequency"
            android:textSize="@dimen/standard_subsubsubheading_text_size"
            android:textStyle="bold"/>
        <Spinner
            style="@style/spinner_style"
            android:id="@+id/ruleaddedit_periodselector"
            android:layout_width="@dimen/standard_dummy_size"
            android:layout_weight="0.24">
        </Spinner>
        <TextView
            android:layout_width="@dimen/standard_dummy_size"
            android:layout_height="@dimen/standard_subsubsubheading_height"
            android:layout_weight="0.03"/>
        <TextView
            android:id="@+id/ruleaddedit_periodmultiplier_label"
            android:layout_width="@dimen/standard_dummy_size"
            android:layout_height="@dimen/standard_subsubsubheading_height"
            android:layout_weight="0.15"
            android:gravity="top"
            android:text="@string/rule_addedit_multiplier"
            android:textSize="@dimen/standard_subsubsubheading_text_size"
            android:textStyle="bold"/>
        <EditText
            style="@style/edittext_required_style"
            android:id="@+id/ruleaddedit_periodmultiplier"
            android:layout_weight="0.07"
            android:maxLength="4"
            android:inputType="number"
            android:digits="0123456789"
            tools:ignore="LabelFor" />
        <TextView
            android:layout_width="@dimen/standard_dummy_size"
            android:layout_height="@dimen/standard_subsubsubheading_height"
            android:layout_weight="0.03"/>
        <TextView
            android:layout_width="@dimen/standard_dummy_width"
            android:layout_height="wrap_content"
            android:height="@dimen/standard_subsubsubheading_height"
            android:layout_weight="0.13"
            android:text="@string/rule_addedit_quantity"
            android:textSize="@dimen/standard_subsubsubheading_text_size"
            android:textStyle="bold"/>
        <EditText
            style="@style/edittext_required_style"
            android:id="@+id/ruleaddedit_quantity"
            android:layout_weight="0.07"
            android:maxLength="4"
            android:inputType="number"
            android:digits="0123456789"
            tools:ignore="LabelFor" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/ruleaddedit_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/standard_subsubsubheading_text_size"
            android:textColor="@color/colorRequiredLabel"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ruleaddedit_currentrules_heading1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorlistviewheading">
        <TextView
            android:id="@+id/currentrules_rulename"
            android:layout_width="@dimen/standard_dummy_size"
            android:layout_height="@dimen/standard_subsubsubheading_height"
            android:layout_weight="0.5"
            android:text="@string/rulelabel"
            android:textSize="@dimen/standard_subsubsubheading_text_size"
            android:textColor="@color/colorNormalButtonText"
            android:textStyle="bold"
            android:onClick="ruleaddeditOrderByRule"/>
        <TextView
            android:layout_width="@dimen/standard_dummy_size"
            android:layout_height="match_parent"
            android:layout_weight="0.025"/>
        <TextView
            android:layout_width="@dimen/standard_dummy_size"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:text=""
            android:textSize="@dimen/standard_subsubsubheading_text_size"
            android:textColor="@color/colorNormalButtonText"
            android:textStyle="italic" />
        <TextView
            android:id="@+id/rulelistentry_ruledate"
            android:layout_width="@dimen/standard_dummy_size"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:text="@string/rule_addedit_date"
            android:textSize="@dimen/standard_subsubsubheading_text_size"
            android:textColor="@color/colorNormalButtonText"
            android:textStyle="bold"
            android:onClick="ruleaddeditOrderByDate"/>
        <TextView
            android:layout_width="@dimen/standard_dummy_size"
            android:layout_height="match_parent"
            android:layout_weight="0.025"/>
        <TextView
            android:id="@+id/rulelistentry_ruleprompttoadd"
            android:layout_width="@dimen/standard_dummy_size"
            android:layout_height="match_parent"
            android:layout_weight="0.125"
            android:text="@string/prompt_label"
            android:textSize="@dimen/standard_subsubsubheading_text_size"
            android:textColor="@color/colorNormalButtonText"
            android:textStyle="bold"
            android:onClick="ruleaddeditOrderByPrompt"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ruleaddeditlist_currentrules_heading2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorlistviewheading">
        <TextView
            android:id="@+id/currentrules_ruleasstring"
            android:layout_width="@dimen/standard_dummy_size"
            android:layout_height="@dimen/standard_subsubsubheading_height"
            android:layout_weight="0.5"
            android:text="@string/rule_addedit_asstring"
            android:textSize="@dimen/standard_subsubsubheading_text_size"
            android:textColor="@color/colorNormalButtonText"
            android:textStyle="bold"/>
    </LinearLayout>
    <ListView
        android:id="@+id/ruleaddedit_currentrules"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </ListView>
</LinearLayout>