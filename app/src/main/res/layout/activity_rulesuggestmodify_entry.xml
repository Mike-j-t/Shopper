<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/standard_listview_row_padding_vertical"
    android:paddingLeft="@dimen/standard_listview_row_padding_horizontal"
    android:paddingRight="@dimen/standard_listview_row_padding_horizontal"
    android:paddingTop="@dimen/standard_listview_row_padding_vertical"
    tools:context="mjt.shopper.MainActivity">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/standard_listview_row_height"
        >
        <TextView
            android:id="@+id/rsmle_product_name_entry"
            style="@style/textview_listentryimportant_style"
            android:layout_weight="0.1"
            />
        <TextView
            android:id="@+id/rsmle_shop_name_entry"
            style="@style/textview_listentryimportant_style"
            android:layout_weight="0.1"
            />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/standard_listview_row_height"
        >
        <TextView
            android:id="@+id/rsmle_aisle_name_entry"
            style="@style/textview_listentryimportant_style"
            android:layout_weight="0.1"
            />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/rsmle_frequency_desc_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/standard_listview_row_height"
        >
        <TextView
            android:id="@+id/rsmle_frequency_desc"
            style="@style/textview_listentry_style"
            android:layout_weight="0.1"
            android:text="@string/frequencydesc"
            />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginBottom="5dp"
        >
        <ProgressBar
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/progressBarlow"
            android:layout_weight="0.5"
            android:progress="45"
            android:progressDrawable="@drawable/splash_progress_drawable"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            tools:background="@android:color/holo_orange_dark"
            android:background="@android:color/holo_orange_dark"/>
        <TextView
            android:layout_width="5dp"
            android:padding="0dp"
            android:layout_height="match_parent"
            android:background="@android:color/black"/>
        <ProgressBar
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/progressBarhigh"
            android:layout_weight="0.5"
            android:progress="15"
            android:progressDrawable="@drawable/splash_reverse_progress_drawable"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            tools:background="@android:color/holo_green_light"
            android:background="@android:color/holo_green_light"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/standard_listview_row_height"
        >
        <TextView
            android:id="@+id/rsmle_frequency_filler"
            style="@style/textview_listentry_style"
            android:layout_weight="0.075"
            />

        <TextView
            android:id="@+id/rsmle_current_frequency_label"
            style="@style/textview_listentryimportant_style"
            android:layout_weight="0.15"
            android:text="@string/currentfrequencylabel"
            />
        <TextView
            android:id="@+id/rsmle_current_frequency"
            style="@style/textview_listentryimportant_style"
            android:layout_weight="0.05"
            />
        <TextView
            style="@style/textview_listentryimportant_style"
            android:layout_weight="0.025"
            />
        <TextView
            android:id="@+id/rsmle_accuracy__label"
            style="@style/textview_listentryimportant_style"
            android:layout_weight="0.1"
            android:text="@string/accuracylabel"
            />
        <TextView
            android:id="@+id/rsmle_accuracy"
            style="@style/textview_listentryimportant_style"
            android:layout_weight="0.05"
            />
        <TextView
            style="@style/textview_listentryimportant_style"
            android:layout_weight="0.125"
            />
        <TextView
            android:id="@+id/rsmle_actual_frequency_label"
            style="@style/textview_listentryimportant_style"
            android:layout_weight="0.2"
            android:text="@string/actualfrequencylabel"
            />
        <TextView
            android:id="@+id/rsmle_actual_frequency"
            style="@style/textview_listentryimportant_style"
            android:layout_weight="0.05"
            />
        <TextView
            style="@style/textview_listentryimportant_style"
            android:layout_weight="0.05"
            />
        <TextView
            android:id="@+id/rsmle_modifyrulebutton_entry"
            style="@style/textviewbutton"
            android:layout_width="@dimen/standard_button_width"
            android:text="@string/standardmodifybutton"
            android:onClick="onModifyClicked"
            />
    </LinearLayout>
</LinearLayout>