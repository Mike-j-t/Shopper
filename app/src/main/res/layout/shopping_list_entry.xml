<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/standard_dummy_size"
    android:background="@color/colorlistviewroweven"
    tools:context="mjt.shopper.ShoppingListActivity">
    <!--  Shop/Store header displays Name City and Street on a new shop -->
    <LinearLayout
        android:id="@+id/shoppinglist_shopheader"
        android:layout_width="match_parent"
        android:layout_height="@dimen/standard_listview_row_height"
        android:padding="@dimen/standard_dummy_size"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/shoppinglist_shopname"
            android:layout_width="0dp"
            android:layout_height="@dimen/standard_listview_row_height"
            android:layout_weight="0.25"
            android:singleLine="true"
            android:textSize="@dimen/standard_listview_text_size"
            android:textStyle="bold"
            android:textColor="@color/colorNormalButtonText"/>
        <TextView
            android:id="@+id/shoppinglist_shopcity"
            android:layout_width="@dimen/standard_dummy_size"
            android:layout_height="@dimen/standard_listview_row_height"
            android:layout_weight="0.25"
            android:singleLine="true"
            android:textSize="@dimen/standard_listview_text_size"
            android:textStyle="italic"
            android:textColor="@color/colorNormalButtonText"/>
        <TextView
            android:id="@+id/shoppinglist_shopstreet"
            android:layout_width="@dimen/standard_dummy_size"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:singleLine="true"
            android:textSize="@dimen/standard_listview_text_size"
            android:textStyle="italic"
            android:textColor="@color/colorNormalButtonText"/>
    </LinearLayout>
    <!--  Aisle Display - Note adapter (ShoppingListAdapter) set/unsets visibility on new aisle -->
    <LinearLayout
        android:id="@+id/shoppinglist_aisleheader"
        android:layout_width="match_parent"
        android:layout_height="@dimen/standard_listview_row_height"
        android:padding="@dimen/standard_dummy_size"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/shoppinglist_aislename"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:singleLine="true"
            android:textSize="@dimen/standard_listview_text_size"
            android:textStyle="bold"
            android:textColor="@color/colorNormalButtonText"/>
    </LinearLayout>
    <!--  Main Data ie Display a Shopping List Item (Product quantity unit cost total cost and Done and Delete buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/standard_button_height"
        android:padding="@dimen/standard_dummy_size"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:layout_width="@dimen/standard_dummy_size"
            android:layout_height="match_parent"
            android:layout_weight="0.010"/>
        <TextView
            android:id="@+id/shoppinglist_productname"
            android:layout_width="@dimen/standard_dummy_size"
            android:layout_height="@dimen/standard_subsubsubheading_height"
            android:layout_weight="0.25"
            android:singleLine="true"
            android:textSize="@dimen/standard_subsubsubheading_text_size"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/shoppinglist_quantity"
            android:layout_width="@dimen/standard_dummy_size"
            android:layout_height="@dimen/standard_subsubsubheading_height"
            android:layout_weight="0.025"
            android:singleLine="true"
            android:textSize="@dimen/standard_subsubsubheading_text_size"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/shoppinglist_price"
            android:layout_width="@dimen/standard_dummy_size"
            android:layout_height="@dimen/standard_subsubsubheading_height"
            android:layout_weight="0.05"
            android:singleLine="true"
            android:textSize="@dimen/standard_subsubsubheading_text_size"
            android:textStyle="normal"/>
        <TextView
            android:id="@+id/shoppinglist_priceforall"
            android:layout_width="@dimen/standard_dummy_size"
            android:layout_height="@dimen/standard_subsubsubheading_height"
            android:layout_weight="0.05"
            android:singleLine="true"
            android:textSize="@dimen/standard_subsubsubheading_text_size"
            android:textStyle="bold|italic"/>
        <TextView
            android:layout_width="@dimen/standard_dummy_size"
            android:layout_height="match_parent"
            android:layout_weight="0.005"/>
        <TextView
            android:id="@+id/shoppinglist_donebutton"
            style="@style/textviewbutton"
            android:text="@string/shoppinglistpurchasedbutton"
            android:onClick="sledone"/>
        <TextView
            android:id="@+id/shoppinglist_replacebutton"
            style="@style/textviewbutton"
            android:text="@string/shoppinglistreplacebutton"
            android:onClick="slereplace"/>
        <TextView
            android:id="@+id/shoppinglist_deletebutton"
            style="@style/textviewwarnbutton"
            android:text="@string/standarddeletetext"
            android:onClick="sledelete"/>
        <TextView
            android:layout_width="@dimen/standard_dummy_size"
            android:layout_height="match_parent"
            android:layout_weight="0.005"/>
    </LinearLayout>
    <!--  Footer Display Approx Remaining Cost -->
    <!--  Defunct/Debugging (ie Visibility = gone)Displays other fields -->
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/sla_orderinfo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/standard_subsubsubheading_height"
        android:padding="@dimen/standard_dummy_size"
        android:visibility="gone">
        <TextView
            android:id="@+id/shoppinglist_shoporder"
            android:layout_width="@dimen/standard_dummy_size"
            android:layout_height="match_parent"
            android:layout_weight="0.05"
            android:singleLine="true"
            android:gravity="right"
            android:textSize="@dimen/standard_subsubsubheading_text_size"
            android:textStyle="italic"/>
        <TextView
            android:id="@+id/shoppinglist_shopid"
            android:layout_width="@dimen/standard_dummy_size"
            android:layout_height="match_parent"
            android:layout_weight="0.05"
            android:singleLine="true"
            android:gravity="right"
            android:textSize="@dimen/standard_subsubsubheading_text_size"
            android:textStyle="italic"/>
        <TextView
            android:id="@+id/shoppinglist_aisleorder"
            android:layout_width="@dimen/standard_dummy_size"
            android:layout_height="match_parent"
            android:layout_weight="0.05"
            android:singleLine="true"
            android:gravity="right"
            android:textSize="@dimen/standard_subsubsubheading_text_size"
            android:textStyle="italic"/>
        <TextView
            android:id="@+id/shoppinglist_aisleid"
            android:layout_width="@dimen/standard_dummy_size"
            android:layout_height="match_parent"
            android:layout_weight="0.05"
            android:singleLine="true"
            android:gravity="right"
            android:textSize="@dimen/standard_subsubsubheading_text_size"
            android:textStyle="italic"/>
        <TextView
            android:id="@+id/shoppinglist_puorder"
            android:layout_width="@dimen/standard_dummy_size"
            android:layout_height="match_parent"
            android:layout_weight="0.05"
            android:singleLine="true"
            android:gravity="right"
            android:textSize="@dimen/standard_subsubsubheading_text_size"
            android:textStyle="italic"/>
        <TextView
            android:id="@+id/shoppinglist_puprodref"
            android:layout_width="@dimen/standard_dummy_size"
            android:layout_height="match_parent"
            android:layout_weight="0.05"
            android:singleLine="true"
            android:gravity="right"
            android:textSize="@dimen/standard_subsubsubheading_text_size"
            android:textStyle="italic"/>
    </LinearLayout>
</LinearLayout>