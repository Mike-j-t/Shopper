<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dbinfomaster"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="@dimen/activity_horizontal_margin"
    android:layout_marginBottom="100dp">
    <LinearLayout
        android:id="@+id/adill100"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/standard_dummy_size">
    </LinearLayout>
    <TextView
        android:id="@+id/adibtn100"
        style="@style/textviewbutton"
        android:text="@string/standarddonebutton"
        android:visibility="visible"
        android:onClick="adifdone"/>
    <ScrollView
        android:layout_width="@dimen/standard_listview_width"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:id="@+id/dbinfo"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </LinearLayout>
    </ScrollView>

</LinearLayout>
