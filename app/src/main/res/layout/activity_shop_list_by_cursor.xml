<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/aslbc_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/standard_dummy_size"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:descendantFocusability="beforeDescendants"
    tools:context="mjt.shopper.ShopListByCursorActivity">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/standard_button_height"
        android:layout_margin="@dimen/standard_dummy_size">
        <TextView
            android:id="@+id/aslbcbtn01"
            style="@style/textviewbutton"
            android:text="@string/standarddonebutton"
            android:onClick="aslbcDone">
        </TextView>
        <Button
            android:id="@+id/aslbcbtn02"
            style="@style/textviewbutton"
            android:text="@string/standardaddbuttontext"
            android:onClick="aslbcAddShop">
        </Button>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/shoplist_help_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/shoplist_help"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/shoplist_instructions"
            android:textSize="@dimen/standard_listview_text_size"
            android:background="@color/colorHelpButton"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/shoplist_heading1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/required_heading_height"
        android:orientation="horizontal"
        android:background="@color/colorlistviewheading">
        <TextView
            android:id="@+id/storelist_store_heading"
            android:layout_width="@dimen/standard_dummy_size"
            android:layout_height="match_parent"
            android:layout_weight="0.89"
            android:text="@string/shoplabel"
            android:textSize="@dimen/standard_subsubsubheading_text_size"
            android:textStyle="bold"
            android:textColor="@color/colorNormalButtonText"
            android:onClick="orderByStore"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.005"/>
        <TextView
            android:id="@+id/storelist_order_heading"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:text="@string/shoporderlabel"
            android:textSize="@dimen/standard_subsubsubheading_text_size"
            android:textStyle="bold"
            android:textColor="@color/colorNormalButtonText"
            android:onClick="orderByOrder"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.005"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/shoplist_heading2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/required_heading_height"
        android:orientation="horizontal"
        android:background="@color/colorlistviewheading">
        <TextView
            android:id="@+id/storelist_city_heading"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:text="@string/shopcitylabel"
            android:textSize="@dimen/standard_subsubsubheading_text_size"
            android:textStyle="bold"
            android:textColor="@color/colorNormalButtonText"
            android:onClick="orderByCity"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.005"/>
        <TextView
            android:id="@+id/storelist_street_heading"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:text="@string/shopstreetlabel"
            android:textSize="@dimen/standard_subsubsubheading_text_size"
            android:textStyle="bold"
            android:textColor="@color/colorNormalButtonText"
            android:onClick="orderByStreet"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.005"/>
        <TextView
            android:id="@+id/storelist_state_heading"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:text="@string/shopstatelabel"
            android:textSize="@dimen/standard_subsubsubheading_text_size"
            android:textStyle="bold"
            android:textColor="@color/colorNormalButtonText"
            android:onClick="orderByState"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.005"/>
        <TextView
            android:id="@+id/storelist_phone_heading"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".185"
            android:text="@string/shopphone"
            android:textSize="@dimen/standard_subsubsubheading_text_size"
            android:textStyle="bold"
            android:textColor="@color/colorNormalButtonText"
            android:onClick="orderByPhone"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/shoplist_heading3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/required_heading_height"
        android:orientation="horizontal"
        android:background="@color/colorlistviewheading">
        <TextView
            android:id="@+id/storelist_notes_heading"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/shopnotes"
            android:textSize="@dimen/standard_subsubsubheading_text_size"
            android:textStyle="bold"
            android:textColor="@color/colorNormalButtonText"
            android:onClick="orderByNotes"/>
    </LinearLayout>
    <ListView
        android:id="@+id/storelist"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:longClickable="true">
    </ListView>
</LinearLayout>