<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/apue_layout"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/standard_dummy_size"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:descendantFocusability="afterDescendants"
    android:baselineAligned="false">
    <LinearLayout
        android:id="@+id/productusageedit_top_buttons"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/standard_button_height">
        <TextView
            android:id="@+id/productusageedit_done"
            style="@style/textviewbutton"
            android:text="@string/standarddonebutton"
            android:onClick="aaptsdone">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/productusageedit_help_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/productusageedit_help"
            style="@style/textview_help_style"
            android:text="@string/addproducttoshop_instructions" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/productuseageedit_selection"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin">
        <TextView
            style="@style/textview_selecttitle_style"
            android:layout_weight="0.1"
            android:text="@string/productlabel"/>
        <EditText
            android:id="@+id/productusageedit_selection_input"
            style="@style/edittext_selection_style"
            android:layout_weight="0.9"
            tools:ignore="LabelFor" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/productusageedit_storeselector_ll"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin">
        <TextView
            android:id="@+id/productusageedit_selector_headings_store_label"
            style="@style/textview_listheading_style"
            android:layout_weight="0.205"
            android:text="@string/shoplabel"
            />
        <Spinner
            style="@style/spinner_style"
            android:id="@+id/productusageedit_storeselector"
            android:layout_width="@dimen/standard_dummy_size"
            android:layout_weight="0.795">
        </Spinner>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/productusageedit_ailseselector_ll"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/productusageedit_selector_headings_aisle_label"
            style="@style/textview_listheading_style"
            android:layout_weight="0.205"
            android:text="@string/aislelabel"
            />
        <Spinner
            style="@style/spinner_style"
            android:id="@+id/productusageedit_aisleselector"
            android:layout_width="@dimen/standard_dummy_size"
            android:layout_weight="0.795">
        </Spinner>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/productusageedit_productselector_ll"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/productusageedit_selector_headings_product_label"
            style="@style/textview_listheading_style"
            android:layout_weight="0.205"
            android:text="@string/productlabel"
            />
        <Spinner
            style="@style/spinner_style"
            android:id="@+id/productuseageedit_productselector"
            android:layout_width="@dimen/standard_dummy_size"
            android:layout_weight="0.795">
        </Spinner>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/apue_input"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/productusageedit_priceinput_label"
            style="@style/textview_important_style"
            android:layout_weight="0.16"
            android:text="@string/productusage_cost_label"
            />
        <TextView
            style="@style/textview_normal_style"
            android:layout_weight="0.01"
            />
        <EditText
            android:id="@+id/productusageedit_priceinput"
            style="@style/edittext_required_style"
            android:layout_weight="0.1"
            android:inputType="numberDecimal"
            android:digits="0123456789."
            tools:ignore="LabelFor"
            />
        <TextView
            style="@style/textview_normal_style"
            android:layout_weight="0.23"
            />
        <TextView
            android:id="@+id/productusageedit_orderinput_label"
            style="@style/textview_normal_style"
            android:layout_weight="0.16"
            android:text="@string/aisleorderlabelshort"
            />
        <TextView
            style="@style/textview_normal_style"
            android:layout_weight="0.01"
            />
        <EditText
            android:id="@+id/productusageedit_orderinput"
            style="@style/edittext_optional_style"
            android:layout_weight="0.1"
            android:inputType="number"
            tools:ignore="LabelFor" />
        <TextView
            style="@style/textview_normal_style"
            android:layout_weight="0.23"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/productusageedit_addbutton"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/standard_button_height">
        <TextView
            android:id="@+id/productusageedit_add"
            style="@style/textviewbutton"
            android:text="@string/standardaddbuttontext"
            android:onClick="addProductToAisle"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/productusageedit_currentaisleproducts_headings"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorlistviewheading">
        <TextView
            android:id="@+id/productusageedit_currentaisleproducts_heading1"
            style="@style/textview_listheadingtitle_style"
            android:layout_weight="1"
            android:text="@string/productsinthisaisle"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/productusageedit_currentaisleproducts_heading2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorlistviewheading">
        <TextView
            android:id="@+id/productusageedit_currentaisleproducts_product"
            style="@style/textview_listheading_style"
            android:layout_weight=".44"
            android:text="@string/productlabel"
            android:onClick="orderByProduct"/>
        <TextView
            android:id="@+id/productusageedit_currentaisleproducts_notes"
            style="@style/textview_listheading_style"
            android:layout_weight="0.42"
            android:text="@string/productnoteslabel"/>
        <TextView
            android:id="@+id/productusageedit_currentaisleproducts_price"
            style="@style/textview_listheading_style"
            android:layout_weight=".08"
            android:text="@string/productusage_cost_label"
            android:onClick="orderByCost"/>
        <TextView
            android:id="@+id/productusageedit_currentaisleproducts_order"
            style="@style/textview_listheading_style"
            android:layout_weight="0.08"
            android:text="@string/productusage_orderinaisle_label"
            android:onClick="orderByOrder"/>
    </LinearLayout>
    <ListView
        android:id="@+id/productusageedit_currentproductslist"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:longClickable="true">
    </ListView>
</LinearLayout>