<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/apa_layout"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/standard_dummy_size"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:descendantFocusability="afterDescendants"
    android:baselineAligned="false">
    <LinearLayout
        android:id="@+id/productaddedit_bottom_buttons"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/standard_button_height">
        <TextView
            android:id="@+id/productaddedit_done_button"
            style="@style/textviewbutton"
            android:text="@string/standarddonebutton"
            android:visibility="invisible"
            android:onClick="doneClicked"/>
        <TextView
            android:id="@+id/productaddedit_save_button"
            style="@style/textviewbutton"
            android:text="@string/standardsavebutton"
            android:onClick="saveClicked"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/productaddedit_help_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/productusageedit_help"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/addeditproduct_instructions"
            android:textSize="@dimen/standard_listview_text_size"
            android:background="@color/colorHelpButton"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/productaddedit_inputproductname"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/standard_heading_height">
        <TextView
            android:id="@+id/productaddedit_productname_label"
            android:layout_width="@dimen/standard_dummy_size"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:text="@string/productlabel"
            android:textSize="@dimen/required_heading_text_size"
            android:textColor="@color/colorRequiredLabel"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="@dimen/standard_dummy_size"
            android:layout_height="match_parent"
            android:layout_weight="0.05"/>
        <EditText
            style="@style/edittext_required_style"
            android:id="@+id/productaddedit_productname"
            android:layout_weight="0.6"
            android:maxLength="@integer/productname_maxcharacters"
            tools:ignore="LabelFor" />
        <TextView
            android:layout_width="@dimen/standard_dummy_size"
            android:layout_height="match_parent"
            android:layout_weight="0.15"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/productaddedit_inputproductnotes"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/standard_heading_height"
        android:layout_margin="@dimen/standard_dummy_size">
        <TextView
            android:id="@+id/productaddedit_productnotes_label"
            android:layout_width="@dimen/standard_dummy_size"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:text="@string/productnoteslabel"
            android:textSize="@dimen/standard_heading_text_size"
            android:textStyle="bold" />
        <TextView
            android:layout_width="@dimen/standard_dummy_size"
            android:layout_height="match_parent"
            android:layout_weight="0.05"/>
        <EditText
            style="@style/edittext_optional_style"
            android:id="@+id/productaddedit_productnotes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.75"
            tools:ignore="LabelFor" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/productaddedit_currentproducts_listview_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/productaddedit_currentproducts_listview_heading"
            android:layout_width="match_parent"
            android:layout_height="@dimen/standard_heading_height"
            android:background="@color/colorlistviewheading"
            android:text="@string/currentproducts_listview_heading"
            android:textColor="@color/colorNormalButtonText"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/standard_heading_height"
            android:layout_margin="@dimen/standard_dummy_size"
            android:background="@color/colorlistviewheading">
            <TextView
                android:id="@+id/aplbctv01"
                android:layout_width="@dimen/standard_dummy_size"
                android:layout_height="@dimen/standard_subsubheading_height"
                android:layout_weight="0.45"
                android:text="@string/productlabel"
                android:textStyle="bold"
                android:textSize="@dimen/standard_subsubsubheading_text_size"
                android:textColor="@color/colorNormalButtonText"
                android:onClick="orderByProduct"/>
            <TextView
                android:id="@+id/aplbctv02"
                android:layout_width="@dimen/standard_dummy_size"
                android:layout_height="@dimen/standard_subsubheading_height"
                android:layout_weight="0.55"
                android:text="@string/productnoteslabel"
                android:textSize="@dimen/standard_subsubsubheading_text_size"
                android:textStyle="bold"
                android:textColor="@color/colorNormalButtonText"
                android:onClick="orderByNotes"/>
        </LinearLayout>
        <ListView
            android:id="@+id/productaddedit_currentproducts_listview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
        </ListView>
    </LinearLayout>
</LinearLayout>