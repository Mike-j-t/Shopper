<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:padding="@dimen/standard_dummy_size">
    <LinearLayout
        android:id="@+id/shoplist_row1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/shop_name_entry"
            style="@style/textview_listentryimportant_style"
            android:layout_weight="0.89"
            />
        <TextView
            style="@style/textview_listentry_style"
            android:layout_weight="0.005"/>
        <TextView
            android:id="@+id/shop_order_entry"
            style="@style/textview_listentry_style"
            android:layout_weight="0.1"
            android:gravity="end"
            />
        <TextView
            style="@style/textview_listentry_style"
            android:layout_weight="0.005"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/shoplist_row2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/shop_city_entry"
            style="@style/textview_listentry_style"
            android:layout_weight="0.3"
            />
        <TextView
            style="@style/textview_listentry_style"
            android:layout_weight="0.005"
            />
        <TextView
            android:id="@+id/shop_street_entry"
            style="@style/textview_listentry_style"
            android:layout_weight="0.4"
            />
        <TextView
            style="@style/textview_listentry_style"
            android:layout_weight="0.005"
            />
        <TextView
            android:id="@+id/shop_state_entry"
            style="@style/textview_listentry_style"
            android:layout_weight="0.1"
            />
        <TextView
            style="@style/textview_listentry_style"
            android:layout_weight="0.005"
            />
        <TextView
            android:id="@+id/shop_phone_entry"
            style="@style/textview_listentry_style"
            android:layout_weight=".185"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/shoplist_row3"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/shop_notes_entry"
            style="@style/textview_listentry_style"
            android:layout_weight="1"
            />
    </LinearLayout>
</LinearLayout>

